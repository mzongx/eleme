border-1px($color) 
  position relative 
  &:after
    display block
    position absolute
    left 0px
    right 0px
    bottom 0px
    width 100%
    border-top 1px solid $color
    content: ' '

border-none()
  &:after
    display none
bg-image($bg)
  background-image url($bg+'@2x.png')
  @media only screen and (-webkit-min-device-pixel-ratio: 3), (min-device-pixel-ratio: 3)
    background-image url($bg+'@3x.png')
